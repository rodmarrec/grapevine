

<div class="container">
    <div class="row">
                
        <!-- STUB Header -->
        <div class="card shadow-lg ml-5 mt-4 rounded" 
            style="width: 40rem;">
            <h4 class="card-header alert alert-info">
                Edit this post's thoughts
            </h4>
            <div class="card-body">   
                
                <form action="/messages/<%= foundMessage._id %>?_method=PUT"
                    method="POST">

                    <p>
                        <!-- STUB jobRole -->
                        <label>
                            Job Title
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="jobRole"
                            required
                            placeholder="<%= foundMessage.jobRole %>" />
                        <small>
                            required.
                        </small>
                        <br /><br />

                        <!-- STUB company -->
                        <label>
                            Company
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="company"
                            required
                            placeholder="<%= foundMessage.company %>" />
                        <small>
                            required.
                        </small>
                        <br /><br />

                        <!-- STUB location -->
                        <label>
                            Location
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="location"
                            required
                            placeholder="<%= foundMessage.location %>" />
                        <small>
                            required.
                        </small>
                        <br /><br />

                        <!-- STUB link -->
                        <label>
                            Link
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="link"
                            required
                            placeholder="<%= foundMessage.link %>" />
                        <small>
                            required.
                        </small>
                        <br /><br />

                        <!-- STUB content -->
                        <label for="content">
                            Thoughts:
                        </label>
                        <textarea class="form-control" 
                            name="content"
                            required 
                            rows="3" 
                            placeholder="Tell us why you're sharing this job post!"
                            style="margin-bottom:30px;"></textarea>
                        
                        <h6 class="pull-right">
                            300 characters max.
                        </h6>
                        <small id="emailHelp" 
                            class="form-text text-muted">
                            required.
                        </small>
                    </p>
                    <hr class="my-4" />
                    
                    <!-- STUB new message button -->
                    <button type="submit" 
                        class="btn btn-sm btn-info">
                        Update Post
                    </button>

                    <!-- STUB cancel button -->
                    <a href="/messages/<%= foundMessage._id %>" 
                        class="btn btn-sm btn-secondary"> 
                        Cancel
                    </a>
                </form>
            </div>
        </div>
            
	</div>
</div>
