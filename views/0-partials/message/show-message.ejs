<div class="container">
    <div class="row">
                
        <!-- STUB Header -->
        <div class="card shadow-lg ml-5 mt-4 rounded " 
            style="width: 40rem;">
            <div class="card-header alert alert-info">
                Post Information
            </div>

            <!-- STUB message content -->
            <div class="card-body">                
                <p>
                    Content: <br>
                    <%= foundMessage.content %>
                </p>
                
                <!-- STUB new message button -->
                <div class=" p-2">
                    <a href="/messages/<%= foundMessage._id %>/edit" 
                        class="btn btn-sm btn-info">
                        Edit Message
                    </a>

                    <!-- STUB cancel button -->
                    <a href="/messages" 
                        class="btn btn-sm btn-secondary"> 
                        Cancel
                    </a>

                    <!-- STUB delete button -->
                    <form action="/messages/<%= foundMessage._id %>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-sm btn-danger pull-right" value="Delete" />
                    </form>
                </div>
                
            </div>
        </div>
            
	</div>
</div>

