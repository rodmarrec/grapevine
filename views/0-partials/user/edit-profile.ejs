<div class="container">
    <div class="row">
                
        <!-- STUB Header -->
        <div class="card shadow-lg ml-5 mt-4 rounded" 
            style="width: 40rem;">
            <h4 class="card-header alert alert-info">
                Update Profile
            </h4>
            <div class="card-body">   
                
                <form action="/user/<%= foundUser._id%>?_method=PUT" 
                    method="POST">

                    <!-- STUB current picture -->
                    <div class="form-group user-edit-form">
                        <small>
                            your current picture
                        </small>
                        <br />
                        <img src="<%= foundUser.profilePic %>" 
                            style="width:200px;height:200px;" />
                        <hr class="my-4/>
                    </div>

                    <div class="form-group">

                        <!-- STUB username -->
                        <label>
                            Username
                            <br />
                        </label>
                        <input type="text" 
                            class="form-control" 
                            placeholder="<%= foundUser.username %>" 
                            disabled />
                        <small>
                            cannot be changed.
                        </small>
                    </div>

                    <p>
                        <!-- STUB profilePic -->
                        <label>
                            Upload new profile picture 
                        </label>
                        <input type="url" 
                            class="form-control"
                            required
                            name="profilePic" />
                        <small>
                            URL only
                        </small>
                        <br /><br />

                        <!-- STUB jobRole -->
                        <label>
                            Job Title
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="jobRole"
                            required
                            placeholder="<%= foundUser.jobRole %>" />
                        <small>
                            i.e. open to work
                        </small>
                        <br /><br />

                        <!-- STUB company -->
                        <label>
                            Company
                        </label>
                        <input type="text" 
                            class="form-control"
                            name="company" 
                            required
                            placeholder="<%= foundUser.company %>" />
                        <small>
                            i.e. Grapevine
                        </small>
                        <br /><br />

                        <!-- STUB location -->
                        <label>
                            Location
                        </label>
                        <input type="text" 
                            class="form-control" 
                            name="location"
                            required
                            placeholder="<%= foundUser.location %>" />
                        <small>
                            i.e. San Francisco Bay Area
                        </small>
                        <br /><br />
                        
                    </p >

                    
                    <!-- STUB new message button -->
                    <button type="submit" 
                        class="btn btn-sm btn-info my-4">
                        Update
                    </button>

                    <!-- STUB cancel button -->
                    <a href="/user/<%= foundUser._id%>" 
                        class="btn btn-sm btn-secondary"> 
                        Cancel
                    </a>

                </form>
            </div>
        </div>

    </div>
</div>
