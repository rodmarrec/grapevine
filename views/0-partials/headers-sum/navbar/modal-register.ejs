

<div class="modal fade" 
    id="registerModal" 
    tabindex="-1" 
    role="dialog" 
    aria-labelledby="registerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" 
        role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-info">

                <!--STUB modal title -->
                <h5 class="content has-text-centered ">
                    Find your next opportunity through Grapevine
                </h5>
                <button type="button" 
                    class="close" 
                    data-dismiss="modal" 
                    aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>


            <!--STUB register form  -->
            <form action="/user/register" 
                method="POST">
                <div class="modal-body">

                    <!-- STUB username -->
                    <p>
                        <label for="username">
                            Username:
                        </label>
                        <input type="username" 
                            class="form-control" 
                            name="username" 
                            maxlength="25" 
                            minlength="2" 
                            required />
                        <small id="emailHelp" 
                            class="form-text text-muted">
                            4 characters min required. 20 characters max.
                        </small>
                    </p>
                    
                    <!-- STUB email -->
                    <p>
                        <label for="email">
                            Email:
                        </label>
                        <input type="email" 
                            class="form-control" 
                            name="email" 
                            maxlength="25" 
                            minlength="2" 
                            required />
                        <small id="emailHelp" 
                            class="form-text text-muted">
                            We'll never share your email with anyone else.
                        </small>
                    </p>

                    <!-- STUB password -->
                    <p>
                        <label for="password">
                            Password:
                        </label>
                        <input type="password" 
                            class="form-control" 
                            name="password" 
                            maxlength="25" 
                            minlength="4"
                            required />
                    </p>

                    <!-- STUB confirm password -->
                    <p>
                        <label for="password2">
                            Confirm Password:
                        </label>
                        <input type="password" 
                            class="form-control mb-4" 
                            name="password2" 
                            maxlength="25" 
                            minlength="4"
                            placeholder="re-enter your password" 
                            required />
                    </p>

                    <!-- STUB modal footer -->
                    <div class="modal-footer">

                        <!-- STUB footer left -->
                        <div class="pull-right">

                            <!-- STUB checkbox -->
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" 
                                        value="accept-use" /> 
                                    I accept the 
                                    <a href="#">
                                        Terms of Use
                                    </a> 
                                    &
                                    <a href="#">
                                        Privacy Policy
                                    </a>
                                </label>
                            </div>

                        </div>

                        <!-- STUB footer right -->
                        <div class="pull-right">

                            <!-- STUB close button -->
                            <button type="button" 
                                class="btn btn-secondary"
                                data-dismiss="modal">
                                Cancel
                            </button>

                            <!-- STUB sign up button -->
                            <button type="submit" 
                                class="btn btn-info">
                                Join
                            </button>
                        </div>
                    </div>


                </div>
            </form>
        </div>
    </div>
</div>

